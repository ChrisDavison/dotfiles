[user]
    name=Chris Davison
    email=c.jr.davison@gmail.com
[advice]
    ignoreHook=false
[pull]
    rebase=true
[push]
    default=simple
[merge]
    ff=false
[rebase]
    autosquash=true
[help]
    autocorrect=5
[status]
    submodulesummary=1
[diff]
    submodule=log
[code]
    excludesfiles=/Users/davison/.global_ignore
    pager="less -FRSX"
[alias]
    uncommit=reset --soft HEAD^
    unstage=reset HEAD --
    discard=checkout --
    staged=diff --cached
    l=log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	d=diff -w
    s=status -s -b
	branch-name=rev-parse --abbrev-ref HEAD
	branches=branch -a
    tags=tag
    stashes=stash list
    sshow=stash show --text
    scl=stash clear
    a=add
    aa=add --all
    ap=add --patch
    c=commit -v
    ca=commit -v --amend
    co=checkout
    cob=checkout -b
    wch=whatchanged -p --abbrev-commit --pretty=medium
    # Push branch to remote
    publish="!git push -u origin $(git branch-name)"
    # Remove branch from remote
    unpublish="!git push origin :$(git branch-name)"
    editmodified="!$EDITOR $(git ls-files -m -o)"
[core]
	excludesfile = /Users/davison/.global_ignore
	commitGraph = true
[wc]
	writeCommitGraph = true
