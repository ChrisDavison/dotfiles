# Aliases for bash, zsh etc

# some more ls aliases
alias ll='ls -alF --group-directories-first'
alias la='ls -A'
alias l='ls -CF'

alias c='clear'
alias h='history'
alias j='jobs -l'
alias ..='cd ..'
alias ...="cd ../.."
alias ....="cd ../../.."

# Directory CD aliases
alias d="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias src='cd ~/prog'
alias engd='cd ~/engd'

# Copy SSH public key
alias cbssh="cbf ~/.ssh/id_rsa.pub"  

# Switch to python numeric environment
alias pyenv="source ~/Envs/numeric/bin/activate"

alias pynb="echo \"Running iPython Notebook in the background\" && pyenv && (cd ~/engd/pynotebook && ipython notebook --no-browser) &"
