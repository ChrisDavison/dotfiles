# Aliases for bash, zsh etc

# some more ls aliases
alias ll='gls -lF --group-directories-first --color=auto'
alias la='gls -AlF --group-directories-first --color=auto'
alias ls='gls -CF --group-directories-first --color=auto'
alias l='gls -CF --group-directories-first --color=auto'

alias c='clear'
alias h='history'
alias j='jobs -l'
alias ..='cd ..'
alias .2="cd ../.."
alias .3="cd ../../.."
alias .4="cd ../../../.."
alias .5="cd ../../../../.."

# Copy SSH public key
alias cbssh="cbf ~/.ssh/id_rsa.pub"

# Switch to python numeric environment
alias pyenv="source ~/Envs/numeric/bin/activate"

# Nice git aliases
alias g='git'
alias gst='git status'
alias grst='gr status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gc='git commit -v'
alias gc!='git commit -v --amend'
alias gco='git checkout'
alias gcom='git checkout master'
alias gb='git branch'
alias gba='git branch -a'
alias glg='git log --stat --max-count=10'
alias glog='git log --oneline --decorate --color --graph'
alias gap='git add -p'
alias ga='git add'
alias gp='git push'
alias gi='git ls-files --others'
alias gia='git ls-files --others | grep -v .pyc | grep -v ipynb_checkpoints'


alias cl='catless'

alias pipall='pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs pip install -U'
