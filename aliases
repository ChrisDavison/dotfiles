# Aliases for bash, zsh etc

# Directory listing aliases
alias ll='gls -lFh --group-directories-first --color=auto'
alias la='gls -AlFh --group-directories-first --color=auto'
alias ls='gls -CF --group-directories-first --color=auto'
alias l='gls -CF --group-directories-first --color=auto'

# Session management
alias c='clear'
alias h='history'
alias j='jobs -l'
alias ..='cd ..'
alias .2="cd ../.."
alias .3="cd ../../.."
alias .4="cd ../../../.."
alias .5="cd ../../../../.."

# Copy SSH public key
alias cbssh="cbf ~/.ssh/id_rsa.pub"

# Python machine-learning environment
alias ml="source ~/.envs/ml/bin/activate"

# Tmux session handling
alias tma="tmux attach -d -t"
alias tmuxhere="tmux new -s $(basename $(pwd))"

# Nice git aliases
alias g='git'
alias gst='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gc='git commit -v'
alias gc!='git commit -v --amend'
alias gco='git checkout'
alias gcom='git checkout master'
alias gb='git branch'
alias gba='git branch -a'
alias glg='git log --stat --max-count=10'
alias glog='git log --oneline --decorate --color --graph'
alias gap='git add -p'
alias ga='git add'
alias gp='git push'
alias gi='git ls-files --others'
alias gia='git ls-files --others | grep -v .pyc | grep -v ipynb_checkpoints'
alias gbf='git checkout -b'
alias gbn='git checkout master && git checkout -b'

# Mixu git-run (gr) aliases...
# For handling multiple git repos
alias grst='gr @live status'
alias grstv='gr @live status -v'
alias grest='gr @engd status'
alias grpst='gr @personal status'

alias dirtyrepo='gr status | grep -v "Clean"'
alias unpushedrepo='gr status | grep "Clean" | grep "ahead"'

# Utilities
alias cl='catless'

alias del='rmtrash'
alias rm="echo Use 'del' or the full path, i.e. '/bin/rm'"

alias todos="todof ~/Dropbox/notes/todo.md"
alias mdepub="pandoc -s -t epub"

alias todoa="~/bin/addtodo.py"

alias tma='tmux attach -d -t'
alias tmuxhere='tmux new -s $(basename $(pwd))'
