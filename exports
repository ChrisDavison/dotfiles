# Exports for bash/zsh

export EDITOR="vim";

# Terminal history handling
export HISTCONTROL=ignoreboth:erasedups;
export HISTSIZE=32768;
export HISTFILESIZE=$HISTSIZE;
export HISTFILESIZE=2000;
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help";

# Environment variables/path
# export PATH="~/bin:/usr/lib/lightdm/lightdm:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/go/bin";
export GOPATH="$HOME/p/go";
export GOBIN="$HOME/p/go/bin";
export TEXPATH="/usr/texbin";
export HASKPATH="$HOME/Library/Haskell/bin"; # CABAL binary path
export RACKETPATH="/Applications/Racket\ v6.1.1/bin";
export NODEPATH="/usr/local/lib/node_modules";
export HOMEBIN="$HOME/bin"
export MULTIRUSTBIN="$HOME/.multirust/toolchains/nightly/cargo/bin"
export STACKBIN="$HOME/.local/bin"
export SCRIPTPATH="$HOME/p/scripts"

export JOBSTATUS="$HOME/.jobstatus"

export PATH=$GOBIN:$TEXBIN:$HASKPATH:$RACKETPATH:$NODEPATH:$HOMEBIN:$MULTIRUSTBIN:$STACKBIN:$SCRIPTPATH:$PATH;

# 256 color terminal
export TERM=xterm-256color;

export RUST_SRC_PATH="/Users/davison/p/z__NOT_MINE/rust_1.3_src/src/"
