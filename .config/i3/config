# Workspaces - 'Monitor 1'
for_window [class="GitKraken"] move container to workspace $ws2
for_window [class="Thunderbird"] move container to workspace $ws3
for_window [class="Slack"] move container to workspace $ws3

# Workspaces - 'Monitor 2 (inbuilt)'
for_window [class="Code"] move container to workspace $ws6
for_window [class="libreoffice-writer"] move container to workspace $ws7
for_window [class="Mendeley Desktop"] move container to workspace $ws8
for_window [class="keepassxc"] move container to workspace $ws9
for_window [class="spotify"] move container to workspace $ws10

# Other window modifications
for_window [class="Anki"] floating enable; move position center
for_window [title="keybinds.png" class="feh"] floating enable; move position center
for_window [class="Blueman-manager"] floating enable
for_window [class="*mpv*"] floating enable
for_window [title=".*contacts.*" class="feh"] floating enable; move position enter
