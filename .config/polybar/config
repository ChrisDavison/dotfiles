[colors]
black = #000000
dark = #333
white = #ffffff
white50 = #99ffffff
white25 = #33ffffff
transparent = #0fff
red = #cc241d
bright_purple = #af59ff
bright_purple50 = #66af59ff
bright_pink = #ff59fc
darker_pink = #ef4aec
purple_blue = #5c59ff

[settings]
screenchange-reload = true
pseudo-transparency = true
bspwm-padding=1

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/internal]
monitor = ${env:MONITOR:}
width = 100%
height = 18px
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true
bottom=false

background = ${colors.dark}
foreground = ${colors.white}

line-size = 1

border-size = 0
border-color = ${colors.dark}

padding-left = 2
padding-right = 0

module-margin-left = 0
module-margin-right = 2

font-0 = Hack:size=10;3

modules-left = date
modules-center = bspwm battery backlight-acpi
modules-right =
; pulseaudio cpu memory
; cpu memory filesystem pulseaudio battery backlight-acpi

tray-position = right
tray-padding = 5
tray-background = ${colors.dark}

wm-restack = bspwm
; or 'i3'

cursor-click = pointer
cursor-scroll = ns-resize

[bar/external]
monitor = ${env:MONITOR:}
width = 100%
height = 18px
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true
bottom=false

background = ${colors.dark}
foreground = ${colors.white}

line-size = 1

border-size = 0
border-color = ${colors.dark}

padding-left = 2
padding-right = 0

module-margin-left = 0
module-margin-right = 2

font-0 = Hack:size=10;3

modules-left = date
modules-center = bspwm
wm-restack = bspwm
; or 'i3'

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen=50

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %layout%
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.red}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %mountpoint%: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.white}

[module/bspwm]
type = internal/bspwm
padding=0

label-focused = %name%
label-focused-underline = ${colors.bright_pink}
label-focused-foreground = ${colors.bright_pink}
label-focused-background = ${colors.transparent}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.white}
label-occupied-background = ${colors.transparent}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.white25}
label-empty-background = ${colors.transparent}
label-empty-padding = 1

; Separator in between workspaces
; label-separator = |
; label-separator-foreground = ${colors.white25}
; label-separator-background = ${colors.bright_pink}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
padding=20

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.bright_purple}

label-focused = %name%
label-focused-background = ${colors.transparent}
label-focused-padding = ${settings.bspwm-padding}

label-unfocused = %name%
label-unfocused-padding = ${settings.bspwm-padding}
label-unfocused-foreground = ${colors.white}

label-visible = %name%
label-visible-background = ${colors.transparent}
label-visible-padding = ${settings.bspwm-padding}

label-urgent = %name%
label-urgent-background = ${colors.transparent}
label-urgent-padding =  ${settings.bspwm-padding}

; Separator in between workspaces
; label-separator = |

[module/xbacklight]
type = internal/xbacklight
format = <label>
format-prefix=
format-prefix-font=1
label = " %percentage%%"

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "c"
label = %percentage%%
format-background = ${colors.transparent}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "m"
label = "%percentage_used%% "
format-background = ${colors.transparent}

[module/date]
type = internal/date
interval = 5
date = %A %d
time = %H:%M
label = "%date%, %time% "
label-foreground=${colors.white}
label-background=${colors.transparent}

[module/pulseaudio]
type = internal/pulseaudio
format-volume = Volume <ramp-volume> <label-volume>
format-volume-prefix=
format-volume-prefix-font=1
format-volume-foreground=${colors.white}
format-volume-background=${colors.transparent}
format-muted = <label-muted>
format-muted-prefix=
format-muted-prefix-font=1
label-volume = %percentage%%
label-volume-foreground = ${colors.white}
label-volume-background = ${colors.transparent}
label-muted = mute
label-muted-foreground = #666
ramp-volume-0 = .......
ramp-volume-1 = :......
ramp-volume-2 = -:.....
ramp-volume-3 = --:....
ramp-volume-4 = ---:...
ramp-volume-5 = ----:..
ramp-volume-6 = -----:.
ramp-volume-7 = ------:

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 98
label-charging = %percentage%%
label-discharging = %percentage%%
format-charging = <ramp-capacity> <label-charging> 
format-discharging = <ramp-capacity> <label-discharging>
format-full = FULL
ramp-capacity-0=
ramp-capacity-1=
ramp-capacity-2=
ramp-capacity-3=
ramp-capacity-4= 

[module/batrem]
type = custom/script
exec = $HOME/.bin/batrem
label = %output%
format-prefix = bat
format-prefix-foreground = ${colors.white}
tail = true
interval = 20
