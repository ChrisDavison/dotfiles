; https://github.com/polybar/polybar

[colors]
background = #33222222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
white = #ffffff
red = #cc241d
purple = #8620e6

[bar/example]
monitor = ${env:MONITOR:}
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 1
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = CascadiaCode:style=Regular:size=12;3
font-1 = FontAwesome:style=Regular:size=12;3
font-2 = FontAwesome:style=Regular:size=12;3

modules-left = powermenu bspwm 
modules-center = xwindow polypomo 
modules-right = wired-network wireless-network pulseaudio xbacklight memory cpu battery date

; NOT USING
; filesystem (mount pointand memory used, e.g. '/:32%')
; xkeyboard (layout, e.g. 'gb')

tray-position = right
tray-padding = 0
tray-background = ${colors.background}

wm-restack = bspwm
; wm-restack = i3

; override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %layout%
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm
padding=20

label-focused = %name%
label-focused-foreground = ${colors.white}
label-focused-background = ${colors.purple}
label-focused-padding = ${settings.bspwm-padding}

label-occupied = %name%
label-occupied-foreground = ${colors.purple}
label-occupied-padding = ${settings.bspwm-padding}

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = ${settings.bspwm-padding}

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = ${settings.bspwm-padding}

; Separator in between workspaces
; label-separator = |

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
padding=20

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-background=#aa000000

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |


[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight
format = <label>
format-prefix=
format-prefix-font=1
label = " %percentage%%"

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu"
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem"
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%%

[module/wired-network]
type=internal/network
interface=enp3s0
interval = 3.0
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected =


[module/wireless-network]
type=internal/network
interface=wlp2s0
interval = 3.0
format-connected = <label-connected>
label-connected = %essid%
format-disconnected =

[module/date]
type = internal/date
interval = 5
date = %a, %b %d
time = %H:%M
label = " %date% - %time% "
label-background=${colors.purple}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> 
format-volume-prefix=
format-volume-prefix-font=1
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

format-muted = <label-muted>
format-muted-prefix=
format-muted-prefix-font=1
label-muted = mute
label-muted-foreground = #666

[module/alsa]
type = internal/alsa

format-volume = <label-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 98

format-charging-prefix = "bat"
format-charging-prefix-foreground = ${colors.foreground-alt}
format-charging = <label-charging>

format-discharging-prefix = "bat"
format-discharging-prefix-foreground = ${colors.foreground-alt}
format-discharging = <label-discharging>

format-full-prefix = bat
format-full-prefix-foreground = ${colors.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

menu-0-0 = Restart
menu-0-0-exec = gnome-session-quit --reboot
menu-0-1 = Sleep
menu-0-1-exec = i3locksusp
menu-0-2 = Lock
menu-0-2-exec = i3scrlock
menu-0-3 = Shutdown
menu-0-3-exec = gnome-session-quit --power-off
menu-0-4 = Logout
menu-0-4-exec = gnome-session-quit --logout

format-prefix-foreground = ${colors.red}
label-open = " "
label-open-foreground = ${colors.foreground}
label-close = " "
label-close-foreground = ${colors.red}
label-separator = |
label-separator-foreground = ${colors.purple}

[settings]
screenchange-reload = true
pseudo-transparency = true
bspwm-padding=1

[global/wm]
margin-top = 5
margin-bottom = 5

[module/batrem]
type = custom/script
exec = $HOME/.bin/batrem
label = %output%
format-prefix = bat
format-prefix-foreground = ${colors.foreground-alt}
interval = 20

[module/polypomo]
type = custom/script
exec = $HOME/src/polypomo/polypomo --breaktime 300
tail = true

label = %output%
click-left = $HOME/src/polypomo/polypomo toggle
click-right = $HOME/src/polypomo/polypomo end
click-middle = $HOME/src/polypomo/polypomo lock
scroll-up = $HOME/src/polypomo/polypomo time +60
scroll-down = $HOME/src/polypomo/polypomo time -60

